<mvc:View
    controllerName="sap.ui.demo.webtech.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <Shell>
        <App class="myAppDemoWT">
            <pages>
                <Page title="{i18n>LecturesTitle}" class="sapUiSmallMarginEnd">
                    <headerContent>
                        <Button 
                            icon="sap-icon://hello-world"
                            press=".onOpenDialog"
                            class="sapUiSmallMarginEnd"/>
                    </headerContent>
                    <content>
                        <mvc:XMLView viewName="sap.ui.demo.webtech.view.LecturesList"/>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
